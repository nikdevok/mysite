<%= content_block(:title => "Редактирование новости") do %>

  <%= form_for(@news) do |f| %>
    <% if @news.errors.any? %>
      <div id="error_explanation">
        <h2>Вы не заполнили обязательные поля!</h2>

        <ul>
        <% @news.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <br>
    <div class="field">
      <%= f.label :body %><br />
      <%= f.text_area :body, :class => 'someclass', :id => "edit", :cols => 50, :rows => 50 %>
    </div>
    <div class="actions">
      <%= f.submit class: "btn btn-success btn-xs" %>
    </div>
  <% end %>
       
<% end %>
