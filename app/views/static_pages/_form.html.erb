
<%= form_for(@static_page) do |f| %>
  <% if @static_page.errors.any? %>
    <div id="error_explanation">
      <h2>При сохранении страницы возникли ошибки:</h2>

      <ul>
      <% @static_page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%#= f.cktext_area :body, :class => 'someclass', :ckeditor => {:language => 'ru', :height => "500px"} %>
    <%= f.text_area :body, :class => 'someclass', :id => "edit", :cols => 50, :rows => 50 %>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-success btn-xs" %>
  </div>
<% end %>
